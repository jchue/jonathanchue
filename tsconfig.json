{
  "compilerOptions": {
    // Let Babel transform JS
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}
